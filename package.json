{
  "name": "streaming-system",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server",
      "media-server"
    ],
    "nohoist": [
      "husky"
    ]
  },
  "author": "Michael Medvediev <misha.medvedev2001@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/mongoose": "^5.11.97"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "server/**/*.{ts,tsx}": [
      "yarn lint:server",
      "git add"
    ],
    "client/**/*.{ts,tsx}": [
      "yarn lint:client",
      "git add"
    ]
  },
  "scripts": {
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "build:client": "yarn workspace client run build",
    "build:server": "yarn workspace server run build",
    "start": "yarn workspace server run start:prod",
    "start:client": "yarn workspace client run start",
    "start:server": "yarn workspace server run start:dev",
    "start:media": "yarn workspace media-server run dev"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "mongoose": "^6.0.14",
    "typescript": "^4.2.3",
    "uuidv4": "^6.2.7"
  }
}
